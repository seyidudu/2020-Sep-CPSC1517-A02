<!DOCTYPE html>
<html>
<head>
    <title>@Page.Title</title>
    @RenderSection("head", required: false)
    <script src="~/Scripts/jquery-3.5.1.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
@*will allow you to set specific style for your individual web page
    to override general styling*@
    @RenderSection("head", required: false)
</head>
<body>
    @*how to bring in a menu that is in another file?*@
    @RenderPage("~/_Menu.cshtml")
    <div class="container-fluid">
        <div class="jumbotron">@RenderSection("banner")</div>
        @RenderBody()
        @RenderSection("foot", required: false)
    </div>
</body>
</html>
